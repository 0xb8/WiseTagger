# Maintainser: cat <cat@wolfgirl.org>

_realname=WiseTagger
pkgname="${MINGW_PACKAGE_PREFIX}-${_realname}-git"
pkgver=r77.37af31d
pkgrel=1
pkgdesc="Simple picture tagger"
arch=('any')
url="https://bitbicket.org/catgirl/wisetagger/"
license=('custom:wtfpl')
depends=("${MINGW_PACKAGE_PREFIX}-qt5")
makedepends=("${MINGW_PACKAGE_PREFIX}-gcc"
            "make"
            "git")

source=("git+https://catgirl@bitbucket.org/catgirl/wisetagger.git")
sha256sums=('SKIP')

pkgver() {
  cd "$srcdir/$_realname"
  printf "r%s.%s" "$(git rev-list --count HEAD)" "$(git rev-parse --short HEAD)"
}


build() {
	cd ${srcdir}/${_realname}
	${MINGW_PREFIX}/bin/qmake CONFIG+=release PREFIX="${pkgdir}${MINGW_PREFIX}"
	make
}

package() {
	cd ${srcdir}/${_realname}
	make
	mkdir -p ${pkgdir}${MINGW_PREFIX}/bin/
	mv release/${_realname}.exe "${pkgdir}${MINGW_PREFIX}/bin/"
}
